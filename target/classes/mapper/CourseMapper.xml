<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace属性是名称空间，必须唯一 -->
<mapper namespace="com.edu.victor.Dao.CourseDao">
    <resultMap id="ChapterMap" type="SectionDto">
        <collection property="SectionDto" column="id" select="getSectionByStep" ofType="Section"/>
    </resultMap>
    <resultMap id="CourseMap" type="CourseDto">
        <collection property="chapterDto" column="id" resultMap="SectionMap" select="getChapterByStep"/>
    </resultMap>
    <select id="getTotalCourseInfo" resultMap="CourseMap">
        select title,tea_id from course where id = #{id};
    </select>
    <select id="getChapterByStep" resultMap="ChapterMap">
        select id,title,superior_id from course_chapter wherer id = #{id};
    </select>
    <select id="getSectionByStep" resultType="Section">
        select id,title,superior_id,url from course_section where id = #{id};
    </select>
    <insert id="addCourse" parameterType="Course">
        insert into course(tea_id,tea_name,title,description,pic)value (#{tea_id},#{tea_name},#{title},#{description},#{picUrl});
    </insert>
    <insert id="addChapter" parameterType="Chapter">
        insert into course_chapter(title,weights,superior_id)value (#{title},#{weights},#{superior_id});
    </insert>
    <insert id="addSection" parameterType="Section">
        insert into course_section(title,weights,superior_id,url)value (#{title},#{weights},#{superior_id},#{url});
    </insert>
    <insert id="addCourseware" parameterType="Courseware">
      insert into courseware(superior_id,title,url)value (#{superior_id},#{title},#{url});
    </insert>
    <select id="searchCourses" resultType="Course">
        select * from course where tea_id = #{id};
    </select>
    <select id="searchChapter" resultType="Chapter">
        select * from course_chapter where superior_id = #{id} order by weights;
    </select>
    <select id="searchSection" resultType="Section">
        select * from course_section where superior_id = #{id} order by weights;
    </select>
    <delete id="deleteCurse">
        delete from course where id = #{id};
    </delete>
    <delete id="deleteChapter">
        delete from course_chapter where id = #{id};
    </delete>
    <delete id="deleteSection">
        delete from course_section where id = #{id}
    </delete>

</mapper>
