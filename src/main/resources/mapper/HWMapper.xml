<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace属性是名称空间，必须唯一 -->
<mapper namespace="com.edu.victor.Dao.HWDao">
    <!--mapper返回的任然是受影响的行数，主键返回在实体的对应属性中-->
    <insert id="publishHW" useGeneratedKeys="true" keyProperty="id" parameterType="Homework">
        insert into homework(course_id,title,content,category,start_time,end_time,publisher_id)value (#{course_id},#{title},#{content},#{category},#{start_time},#{end_time},#{publisherId});
    </insert>
</mapper>
